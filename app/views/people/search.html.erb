<h1> Search Results </h1>

<table class = "table table-striped">
	<thead>
		<tr>
			<th> Name </th>
			<th> Type </th>
			<th> Actions </th>
	</thead>
	<tbody>
		<% @people.each do |p| %>
			<% p.roles.each do |r| %>
				<tr>
					<td> <%= link_to p.name, person_path(p) %> </td>
					<td><%= r.name %></td>
					<td><%= link_to 'Show', person_path(p) %>
        				<%= link_to 'Edit', edit_person_path(p) %>
        				<%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>