<div class="page-header">
	<h1> Search Results </h1>
</div>
<div class="bigContainer">
<table class = "table table-striped">
	<thead>
		<tr>
			<th> Name </th>
			<th> Type </th>
			<th> Actions </th>
	</thead>
	<tbody>
		<% @people.each do |p| %>
			<% p.roles.each do |r| %>
				<tr>
					<td> <%= link_to p.name, person_path(p) %> </td>
					<td><%= r.name %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>
</div>