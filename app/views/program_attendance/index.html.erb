<%- model_class = ProgramAttendance -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="bigContainer">
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:program_enrollment_id) %></th>
      <th><%= model_class.human_attribute_name(:program_date_id) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:comments) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @program_attendances.each do |program_attendance| %>
      <tr>
        <td><%= link_to program_attendance.id, program_attendance_path(program_attendance) %></td>
        <td><%= program_attendance.program_enrollment_id %></td>
        <td><%= program_attendance.program_date_id %></td>
        <td><%= program_attendance.status %></td>
        <td><%= program_attendance.comments %></td>
        <td><%=l program_attendance.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_program_attendance_path(program_attendance), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      program_attendance_path(program_attendance),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_program_attendance_path,
            :class => 'btn btn-primary' %>
