<%= simple_form_for @program_location, :html => { :class => 'form-horizontal' } do |f| %>
  <div> Program
    <%= f.collection_select(:program_id, Program.all, :id, :name)%>
  </div>
  <%= f.input :name %>
  <%= f.input :address %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                program_path(@program_location.program), :class => 'btn' %>
  </div>
<% end %>
