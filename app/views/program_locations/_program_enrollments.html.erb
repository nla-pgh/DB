<% if @program_enrollments.empty? %>
  <p>&nbsp;&nbsp;<em>No Program Enrollments at this time</em></p>
  <p>&nbsp;</p>
  
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
            <% @program_enrollments.each do |enrollment|%>
        <tr>
          <td><%= link_to enrollment.person.name, people_path(@person) %></td>
          <% for enrollment_course in EnrollmentCourse.where(:program_enrollment_id => enrollment.id) %>
          <td><%= enrollment_course %></td>
          <% end %>
          <td><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      program_enrollment_path(enrollment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>