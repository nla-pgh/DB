<%- model_class = ProgramEmployee -%>
<div class="page-header">
  <h1>Employees for <%= @program_location.program.name + ' at ' + @program_location.name %></h1>
</div>

<% if @employees.empty? %>
  <p>&nbsp;&nbsp;<em>Currently no employees at this location</em></p>
  <p>&nbsp;</p>
  
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= link_to employee.person.first_name, person_path(employee.person) %></td>
          <td><%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_program_employee_path(employee), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      program_employee_path(employee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %></td>
         
         
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<div class="form-actions">
  <%= link_to raw("<i class='icon-plus icon-white'></i> Add a New Employee"), new_program_employee_path, :class => 'btn btn-primary', :id => 'Create Program Employee' %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              program_employees_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_program_employee_path(@program_employee), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              program_employee_path(@program_employee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
