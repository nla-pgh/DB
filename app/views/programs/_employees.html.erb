<% if @program_locations.empty? %>
  <p>&nbsp;&nbsp;<em>No Program Employees at this time</em></p>
  <p>&nbsp;</p>
  
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
            <% @program_locations.each do |location|%>
            <% location.program_employees.each do |program_employee|%>
        <tr>
          <td><%= link_to program_employee.person.name, person_path(program_employee.person) %></td>
          <td><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      program_employee_path(program_employee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<% end %>