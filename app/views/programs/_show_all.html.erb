
<% @programs.each do|program| %>
        <div class="accordion-group">
          <div class="accordion-heading">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" >
              <!-- add the following up there if you figure out looping unique links: href="#" + program.id -->
            <%= program.name %>
            </a>
          </div>
        <div_for program style="height: 0;" class="accordion-body collapse">
        <!-- add the following up there if you figure out looping unique links: id="#" + program.id -->
          <div class="accordion-inner">
            <div class = "row">
              <div class = "span8 ">
                <p> Description: <%= program.description %></p>
                <p><%= link_to "Enrollment & Employees", program_path(program), :class => 'btn btn-mini' %>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                    edit_program_path(program), :class => 'btn btn-mini' %>
                                    <% if program.id != 1 %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                    program_path(program),
                                    :method => :delete,
                                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                    :class => 'btn btn-mini btn-danger' %>
                                    <% end %></p>
              </div>  
            </div> <!-- End ROW -->

            <div class = "row">
              <div class = "span12">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% program.program_locations.each do |program_location| %>
                      <tr>
                        <% if program.program_locations.empty? %>
                        <p>&nbsp;&nbsp;<em>No Program Locations at this time</em></p>
                        <p>&nbsp;</p>
                        <% end %>

                        <td><%= link_to program_location.name, program_location_path(program_location) %></td>
                        <td><%= link_to "Attendance", program_dates_path(:id => program_location.id), :class => 'btn btn-mini' %> 
                        <%= link_to "Enrollment", program_location_path(program), :class => 'btn btn-mini' %>
                        <%= link_to "Employees", program_location_program_employees_path(:id => program_location.id), :class => 'btn btn-mini' %>
                        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                    edit_program_location_path(program_location), :class => 'btn btn-mini' %>
                        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                    program_location_path(program_location),
                                    :method => :delete,
                                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                    :class => 'btn btn-mini btn-danger' %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
          </div></div></div>
<% end %>



